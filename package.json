{
  "name": "Nano Tutor",
  "displayName": "Nano Tutor",
  "version": "0.0.1",
  "description": "Chat with youtube videos for free using built in Gemini Nano AI.",
  "author": "kevin castro weitgenant (kevin.weitgenant@gmail.com)",
  "scripts": {
    "dev": "node scripts/dev-with-fix.js",
    "dev:plain": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "postbuild": "node postbuild/fix-manifest.js",
    "clean": "rimraf build .plasmo"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "@streamparser/json-whatwg": "^0.0.22",
    "lucide-react": "^0.546.0",
    "plasmo": "0.90.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "prettier": "3.2.4",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.3.7",
    "tsx": "^4.20.6",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "sidePanel",
      "storage",
      "tabs",
      "webNavigation"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ]
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
